<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Schedule">

    <TextView
        android:id="@+id/schedule_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:fontFamily="@font/avenir"
        android:foregroundGravity="clip_horizontal"
        android:gravity="center_horizontal"
        android:text="Schedule"
        android:textColor="#000000"
        android:textSize="24sp" />



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/stations_layout"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <TextView
            android:id="@+id/fm_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenirroman"
            android:gravity="center_horizontal"
            android:text="FM"
            android:textColor="#333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenirroman"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dig_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenirroman"
            android:gravity="center_horizontal"
            android:text="Dig"
            android:textColor="#333333"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_recycler"
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/days_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="S" />

        <TextView
            android:id="@+id/Mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="M" />

        <TextView
            android:id="@+id/Tues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="T" />

        <TextView
            android:id="@+id/Wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="W" />

        <TextView
            android:id="@+id/Thurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="Th" />

        <TextView
            android:id="@+id/Fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="F" />

        <TextView
            android:id="@+id/Sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/avenir"
            android:gravity="center_horizontal"
            android:text="S" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="10"
        app:srcCompat="@drawable/back" />

</LinearLayout>